<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <import type="android.view.View"/>
        <variable
            name="newsItem"
            type="com.yuntian.newsframe.ui.news.bean.NewsBean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:text="@{newsItem.title}"
            android:ellipsize="end"
            tools:text="里约奥运会"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <com.flyco.labelview.LabelView
            android:id="@+id/label_view"
            xmlns:lv="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            lv:lv_background_color="#5677fc"
            lv:lv_fill_triangle="true"
            lv:lv_text="图集"
            lv:lv_text_size="11sp"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <LinearLayout
            android:id="@+id/ll_item_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/news_icon_height"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/default_image_icon_01" />

            <ImageView
                android:id="@+id/iv_icon_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/news_icon_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/default_image_icon_01"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_icon_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/news_icon_height"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/default_image_icon_01"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_item_icons"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="网易原创"
                android:text="@{newsItem.source}"
                android:maxWidth="100dp"
                android:ellipsize="end"
                android:textColor="@color/text_666666"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_gravity="right"
                android:textColor="@color/text_666666"
                android:layout_alignParentRight="true"
                android:text="@{newsItem.ptime}"
                tools:text="2016-08-23 11:48:46" />
        </RelativeLayout>
    </RelativeLayout>

</layout>