<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <import type="android.view.View"/>
        <variable
            name="newsItem"
            type="com.yuntian.newsframe.ui.news.bean.NewsBean" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        tools:ignore="MissingDefaultResource">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/news_icon_width"
            android:layout_height="@dimen/news_icon_height"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_image_icon_01"
            />

        <com.flyco.labelview.LabelView
            xmlns:lv="http://schemas.android.com/apk/res-auto"
            android:id="@+id/label_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            lv:lv_fill_triangle="true"
            lv:lv_text_size="11sp"
            lv:lv_text="专题"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_icon"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_icon"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@{newsItem.title}"
            tools:text="里约奥运会" />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_icon"
            android:layout_toRightOf="@+id/iv_icon"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="@{newsItem.source}"
            android:maxWidth="80dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="网易新闻" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_source"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@{newsItem.ptime}"
            tools:text="2016-08-23 11:48:46" />
    </RelativeLayout>

</layout>